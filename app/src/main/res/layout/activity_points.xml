<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".points"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/resultscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink"
        app:cardCornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.57">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shape_Profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="@color/pink"
            android:scaleType="centerCrop"
            app:cardCornerRadius="60dp"
            app:shapeAppearanceOverlay="@style/circleImageView" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_Well"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="Well Done!"
        android:textAlignment="center"
        android:textColor="@color/text1"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></TextView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_leftONE"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/animal"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightpurple"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toStartOf="@+id/tv_best"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_rightONE"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/pattern"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightpurple"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/tv_best"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">
    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_leftTWO"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/animal"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightblue"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toStartOf="@+id/tv_best"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_rightTWO"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/pattern"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightblue"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/tv_best"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_leftTHREE"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/animal"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toStartOf="@+id/tv_best"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_rightTHREE"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/pattern"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/tv_best"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_leftFOUR"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/animal"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/pink"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toStartOf="@+id/tv_best"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_rightFOUR"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:background="@drawable/pattern"
        android:clickable="false"
        android:paddingTop="180dp"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:textStyle="bold"
        app:backgroundTint="@color/pink"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/tv_best"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.8">


    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/tv_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal best: 1/5"
        android:textAlignment="center"
        android:textColor="#250763"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_Well"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.756"></TextView>

    <TextView
        android:id="@+id/tv_highscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="You just beaten your high score!"
        android:textAlignment="center"
        android:textColor="#250763"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.34"></TextView>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="5/5"
        android:textAlignment="center"
        android:textColor="@color/text1"
        android:textSize="46dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="You just scored 100 points!"
        android:textAlignment="center"
        android:textColor="@color/text1"
        android:textSize="16dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:text="Choose Next Category"
        android:textSize="16dp"
        app:backgroundTint="@color/lightpurple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>