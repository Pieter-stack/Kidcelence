<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categories"
    android:background="@color/lightblue">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/backgroundcategory"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        android:clickable="false">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_story"
        android:layout_width="134dp"
        android:layout_height="214dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/story"
        android:text="Let's Explore"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:paddingBottom="180dp"
        android:textStyle="bold"
        app:backgroundTint="@color/pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_math"
        app:layout_constraintTop_toBottomOf="@+id/btn_pattern">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_math"
        android:layout_width="134dp"
        android:layout_height="214dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/maths"
        android:text="Maths"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:paddingBottom="180dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toStartOf="@+id/btn_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sound">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sound"
        android:layout_width="134dp"
        android:layout_height="214dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/animal"
        android:text="Animal sounds"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:paddingTop="180dp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightpurple"
        app:layout_constraintBottom_toTopOf="@+id/btn_story"
        app:layout_constraintEnd_toStartOf="@+id/btn_pattern"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53">


    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pattern"
        android:layout_width="134dp"
        android:layout_height="214dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/pattern"
        android:text="Patterns"
        android:textColor="@color/text1"
        android:textSize="10dp"
        android:paddingTop="180dp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightblue"
        app:layout_constraintBottom_toTopOf="@+id/btn_math"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_sound"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:src="@drawable/animalimg"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_sound"
        app:layout_constraintTop_toTopOf="@+id/materialButton">

    </ImageView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="56dp"
        android:src="@drawable/patternimg"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_pattern"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/btn_pattern">

    </ImageView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="56dp"
        android:src="@drawable/mathimg"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_math"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_math"
        app:layout_constraintTop_toTopOf="@+id/btn_math">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"
        android:src="@drawable/storyimg"
        android:translationZ="5dp"
        app:layout_constraintStart_toStartOf="@+id/btn_story"
        app:layout_constraintTop_toTopOf="@+id/btn_story">

    </ImageView>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_pfp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="51dp"
        android:backgroundTint="@color/pink"
        app:cardCornerRadius="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pink"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/circleImageView" />




    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hi there Excelent John!"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_pfp"
        android:textColor="@color/text1"
        android:textSize="16dp"
        android:textStyle="bold"
        >

    </TextView>


    <TextView
        android:id="@+id/tv_highscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Highscore: "
        android:textAlignment="center"
        android:textColor="@color/text1"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_pfp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/lightpurple"
        app:cardCornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>